<html>
<head>
    <meta charset="UTF-8">
    <title>Admin - {% block title %}{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('css/adminIndex.css') }}">

    <link href="{{ asset('css/fa-all.css') }}" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">

    <script src="{{ asset('js/jquery-3.3.1.js') }}"></script>
    <script src="{{ asset('js/bootstrap.js') }}"></script>
    <script src="{{ asset('js/fa-all.js') }}"></script>

    {% block configCss %}
        {# csska podstranek #}
    {% endblock %}
</head>
<body>
<div class="row" style="margin: 0px;">

    <div class="adminMenu col-sm-2 hmenu">
        {% for menu_item in menuItems %}
            {{ menu_item.miName }} <br/>
        {% endfor %}
    </div>
    <div class="col-sm-10 contentPackage hmenu">
        <div class="col-sm-12 contentMenu ">
            <div class="padding-15">
                contentMenu

            </div>
        </div>


        <div class="col-sm-12 content hmenu">
            <div class="padding-15">
                {% block body %}{% endblock %}
            </div>
        </div>
    </div>

</div>
{% block alerts %}{% endblock %}
{% block configJs %} {% endblock %}
<script>
    /* Srovnání výšek obsahu s menu */
    $( document ).ready(function() {
        var maxHeight = 0;

        $(".hmenu").each(function(){
            if ($(this).height() > maxHeight) { maxHeight = $(this).height()-55; }
        });

        $(".hmenu").height(maxHeight+25);
        $(".content").height(maxHeight)
    });
</script>

</body>
</html>
