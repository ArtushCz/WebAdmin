<html>
<head>
    <meta charset="UTF-8">
    <title>Admin - {% block title %}{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('css/adminIndex.css') }}">

    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">

    <script src="{{ asset('js/jquery-3.3.1.js') }}"></script>
    <script src="{{ asset('js/bootstrap.js') }}"></script>

    {% block configCss %}
        {# csska podstranek #}
    {% endblock %}
</head>
<body>
<style>

</style>
<div class="row" style="margin: 0px;">
    <div class="adminMenu col-sm-2 hmenu">
        adminMenu
    </div>
    <div class="col-sm-10 contentPackage hmenu">
        <div class="col-sm-12 contentMenu ">
            <div class="padding-15">
                contentMenu
            </div>
        </div>


        <div class="col-sm-12 content hmenu">
            <div class="padding-15">
                {% block body %}{% endblock %}
            </div>
        </div>
    </div>

</div>
{% block configJs %} {% endblock %}
<script>
    /* Srovnání výšek obsahu s menu */
    $( document ).ready(function() {
        var maxHeight = 0;

        $(".hmenu").each(function(){
            if ($(this).height() > maxHeight) { maxHeight = $(this).height(); }
        });

        $(".hmenu").height(maxHeight);
        $(".content").height(maxHeight-25)
    });
</script>

</body>
</html>
