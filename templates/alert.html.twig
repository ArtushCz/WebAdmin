{% block configCss %}
    {# csska #}
    <link rel="stylesheet" href=" {{ asset('css/alert.css') }}">

{% endblock %}

<div class="alert-box">
    {% set messageCounter = 0 %}
    {% for message in app.flashes('info') %}
        {% set messageCounter = messageCounter + 1 %}
        <div id="{{ messageCounter }}" class="alert alert-info">
            <div class="row">
                <div class="col-sm-11">
                    {{ message }}
                </div>
                <div class="col-sm-1" style="top: 3px; right: 15px;">
                    <a href="#" class="alert-btn" onclick="alertBtn({{ messageCounter }})"><span
                                class="fas fa-times"></span></a>
                </div>
            </div>
        </div>
    {% endfor %}
    {% for message in app.flashes('warning') %}
        {% set messageCounter = messageCounter + 1 %}
        <div id="{{ messageCounter }}" class="alert alert-warning">
            <div class="row">
                <div class="col-sm-11">
                    {{ message }}
                </div>
                <div class="col-sm-1" style="top: 3px; right: 15px;">
                    <a href="#" class="alert-btn" onclick="alertBtn({{ messageCounter }})"><span
                                class="fas fa-times"></span></a>
                </div>
            </div>
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        {% set messageCounter = messageCounter + 1 %}
        <div id="{{ messageCounter }}" class="alert alert-danger">
            <div class="row">
                <div class="col-sm-11">
                    {{ message }}
                </div>
                <div class="col-sm-1" style="top: 3px; right: 15px;">
                    <a href="#" class="alert-btn" onclick="alertBtn({{ messageCounter }})"><span
                                class="fas fa-times"></span></a>
                </div>
            </div>
        </div>
    {% endfor %}
    {% for message in app.flashes('success') %}
        {% set messageCounter = messageCounter + 1 %}
        <div id="{{ messageCounter }}" class="alert alert-success">
            <div class="row">
                <div class="col-sm-11">
                    {{ message }}
                </div>
                <div class="col-sm-1" style="top: 3px; right: 15px;">
                    <a href="#" class="alert-btn" onclick="alertBtn({{ messageCounter }})"><span
                                class="fas fa-times"></span></a>
                </div>
            </div>
        </div>
    {% endfor %}
</div>


<script>
    function alertBtn(id){
        $("#"+id).slideUp(200);
    }

    function showAlerts(){
        $('.alert').slideToggle(150);

    }

    /* ukonceni zobrazeni po 7s */
    setTimeout(alertShutDown, 1500)
    function alertShutDown() {
        {}
        $('.alert').delay(1500).fadeOut(100);
    }

</script>